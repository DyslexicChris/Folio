{
  "name": "folio.js",
  "version": "0.0.2",
  "author": "DyslexicChris <npm@dyslexicchris.co.uk> (https://github.com/DyslexicChris)",
  "description": "A fluent Node.js HTTP API framework inspired by express",
  "repository": {
    "type": "git",
    "url": "https://github.com/DyslexicChris/Folio"
  },
  "bugs": {
    "url": "https://github.com/DyslexicChris/Folio/issues"
  },
  "scripts": {
    "test": "npm run unit-tests && npm run integration-tests",
    "unit-tests": "./node_modules/mocha/bin/mocha ./test/unit -R spec --recursive",
    "integration-tests": "./node_modules/mocha/bin/mocha ./test/integration/Main.js -R spec --recursive",
    "coveralls": "./node_modules/.bin/istanbul cover ./node_modules/.bin/_mocha -- ./test/unit -R spec && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "generate-docs": "rm -r ./jsdoc/*; echo \"Generating Documentation...\\n\"; ./node_modules/.bin/jsdoc -r -d ./jsdoc ./lib"
  },
  "dependencies": {
    "underscore": "1.6.0",
    "guild": "1.1.0"
  },
  "devDependencies": {
    "chai": "1.9.0",
    "istanbul": "^0.3.0",
    "mocha": "1.17.1",
    "mockery": "1.4.0",
    "sinon": "1.10.3",
    "coveralls": "2.11.1",
    "jsdoc": "3.2.2"
  },
  "license": "MIT"
}
